# Ave Server Environment Variables

# PostgreSQL connection URL
DATABASE_URL=postgresql://postgres:password@localhost:5432/ave

# Server configuration
PORT=3000

# WebAuthn configuration
RP_ID=localhost
RP_NAME=Ave
RP_ORIGIN=http://localhost:5173

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-secret-here-change-in-production

# Cloudflare R2 Configuration
# Get these from: Cloudflare Dashboard â†’ R2
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=ave-uploads
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev
